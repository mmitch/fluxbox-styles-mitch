# darken inactive windows and inactive icons
#   window.label.unfocus.textColor does not work,
#   so set the default to dark and light everything else
window.button.unfocus.picColor:	#666666
*textColor:			#666666
window.label.focus.textColor:	#ffffff
menu*textColor:			#ffffff
toolbar*textColor:		#ffffff
window*focus.textColor:		#ffffff

# hilight menu selection

menu.hilite.color:		#000000
menu.hilite.colorTo:		#666666
menu.hilite:			flat interlaced

# bullets to the right (only visible with fluxbox<0.9 anyway)

menu.bullet.position:		right

# defaults

*bevelWidth:			0
*borderColor:			#000000
*borderWidth:			0
*color:				#000000
*font:				-*-lucida-medium-r-*-*-*-100-*-*-*-*-*-*
*handleWidth:			2
*picColor:			#ffffff

